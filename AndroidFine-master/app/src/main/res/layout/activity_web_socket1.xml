<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <com.sgs.businessmodule.websocketmodel.ArticleWebView
        android:id="@+id/activity_main_webview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dalong.marqueeview.MarqueeView
            android:layout_marginTop="10dp"
            android:id="@+id/mMarqueeView1"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            app:direction="right"
            app:isRepeat="false"
            app:speed="20"
            app:startPoint="end"
            app:textSize="16sp"
            app:textcolor="@color/colorAccent" />


        <com.dalong.marqueeview.MarqueeView
            android:id="@+id/mMarqueeView2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            app:direction="right"
            app:isRepeat="false"
            app:speed="20"
            app:startPoint="end"
            app:textSize="16sp"
            app:textcolor="@color/colorAccent" />

        <com.dalong.marqueeview.MarqueeView
            android:id="@+id/mMarqueeView3"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            app:direction="right"
            app:isRepeat="false"
            app:speed="20"
            app:startPoint="end"
            app:textSize="16sp"
            app:textcolor="@color/colorAccent" />

        <!--<Button
            android:id="@+id/btn_send"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Socket" />

        <Button
            android:id="@+id/btn_send1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-300dp"
            android:text="Socket1" />

        <Button
            android:id="@+id/btn_send2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_send1"
            android:layout_alignParentRight="true"
            android:text="Socket3" />-->
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fillViewport="true"
        android:visibility="gone"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/black" />
    </ScrollView>
</FrameLayout>
